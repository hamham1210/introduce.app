<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/introduceColor"/>
            <stroke
                android:width="4dp"
                android:color="@color/buttonFontColor" />
            <corners android:radius="100dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColcr"/>
            <stroke
                android:width="4dp"
                android:color="@color/buttonFontColor" />

            <corners android:radius="100dp" />

        </shape>

    </item>
</selector>